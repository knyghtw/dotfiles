(include "eww_widget.yuck")

(defwindow control_center
    :monitor 0
    :geometry (geometry :x "75%" :y "40px" :width "360px")
    :anchor "top right"
    :exclusive false
    :stacking "overlay"
    (box :orientation "v" :class "cc"
        (wifi)
        (bluetooth)
        (media)
        (slider :label "Brightness" :cmd "brightnessctl s {}%") 
        (slider :label "Volume" :cmd "wpctl set-volume @DEFAULT_AUDIO_SINK@ {}%")
    )
)